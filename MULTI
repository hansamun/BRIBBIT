/// app/layout.tsx
import { Metadata } from "next";
import { Inter, Poppins, Bebas_Neue } from 'next/font/google';
import "./globals.css";

const inter = Inter({ subsets: ["latin"] });
const poppins = Poppins({ subsets: ["latin"], variable: "--font-poppins" });
const bebasNeue = Bebas_Neue({ subsets: ["latin"], variable: "--font-bebas-neue" });

export const metadata: Metadata = {
title: "Create Next App",
description: "Generated by create next app",
};

export default function RootLayout({
children,
}: {
children: React.ReactNode;
}) {
return (
  <html lang="en" className={`scroll-smooth ${poppins.variable} ${inter.variable} ${bebasNeue.variable}`}>
    <body className="bg-white text-black">{children}</body>
  </html>
);
}

// app/page.tsx
import { Copy } from 'lucide-react';
import Link from "next/link";
import { Button } from "@/components/ui/button";
import { contractAddress } from "@/constants";

export default function Home() {
const copyToClipboard = () => {
  navigator.clipboard.writeText(contractAddress);
};

return (
  <main className="flex min-h-screen flex-col items-center justify-between p-24">
    {/* Header */}
    <header className="flex justify-between items-center p-4 md:p-6">
      {/* Primary nav */}
      <nav aria-label="Primary" className="flex items-center gap-2">
